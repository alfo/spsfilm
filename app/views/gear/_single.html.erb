<div class="item">
	<h2><%= item.name %></h2>
	<p><%= simple_format item.description %></p>
	<h5>Value: &pound;<%= item.value %></h5>
	<% if item.belongs_to(current_user) %>
		<h5>Serial: <%= item.serial %></h5>
		<div><%= link_to 'Edit', edit_gear_path(item), :class => 'btn btn-primary' %></div>
	<% end %>
</div>