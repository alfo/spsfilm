<h2>Sign Up</h2>

<%= form_for @user, :html => {:class => 'form-horizontal center-form'} do |f| %>
	<div class="control-group">
		<%= f.label :email, :class => 'control-label' %>
		<div class="controls"><%= f.email_field :email, :placeholder => 'Email' %></div>
	</div>
	<div class="control-group">
		<%= f.label :password, :class => 'control-label' %>
		<div class="controls"><%= f.password_field :password, :placeholder => 'Password' %></div>
	</div>
	<div class="control-group">
		<div class="controls">
			<%= button_tag 'Sign Up', :class => 'btn btn-success', :id => 'form_submit' %>
		</div>
	</div>
<% end %>