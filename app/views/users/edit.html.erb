<h2>Edit Account Settings</h2>

<p>You signed up on <%= current_user.created_at %> and are user number <%= current_user.id %>.</p>

<%= form_for current_user, :html => {:class => 'form-horizontal center-form'} do |f| %>
	<fieldset>
		<div class="control-group">
			<%= f.label :email, :class => 'control-label' %>
			<div class="controls"><%= f.email_field :email %></div>
		</div>
		<div class="control-group">
			<%= f.label :current_password, 'Current Password', :class => 'control-label' %>
			<div class="controls"><%= f.password_field :password, :placeholder => 'Current Password' %></div>
		</div>
		<div class="control-group">
			<%= f.label :password, 'New Password', :class => 'control-label' %>
			<div class="controls"><%= f.password_field :password, :placeholder => 'New Password' %></div>
		</div>
		<div class="control-group">
			<div class="controls"><%= f.submit 'Edit Account', :class => 'btn btn-success' %></div>
		</div>
	</fieldset>
<% end %>