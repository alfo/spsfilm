<h2>Log In</h2>

<%= form_tag do_login_path, :class => 'form-horizontal center-form', :id => 'user_login' do %>
	<fieldset>
		<div class="control-group">
			<%= label_tag :email, 'Email', :class => 'control-label' %>
			<div class="controls"><%= email_field_tag :email, nil, :placeholder => "Email" %></div>
		</div>
		<div class="control-group">
			<%= label_tag :password, 'Password', :class => 'control-label' %>
			<div class="controls"><%= password_field_tag :password, nil, :placeholder => "Password" %></div>
		</div>
		<div class="control-group">
			<div class="controls">
				<%= submit_tag "Log In", :class => 'btn btn-success' %>
			</div>
			<div class="controls">
				<p><br><%= link_to 'Forgotten password?', new_password_reset_path %></p>
			</div>
		</div>
	</fieldset>
<% end %>